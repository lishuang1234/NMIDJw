<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/fragment_first_page_vp_show"
        >
    </android.support.v4.view.ViewPager>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignBottom="@id/fragment_first_page_vp_show"
        android:layout_marginBottom="-60dp"
        android:background="@android:color/white"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        app:cardElevation="1dp"
        android:id="@+id/first_page_fragment_cv_user_all">
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="-30dp"
        android:layout_alignTop="@id/first_page_fragment_cv_user_all"

        >

        <ImageView
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:id="@+id/first_page_fragment_iv_user_photo"
            android:src="@mipmap/ic_launcher"
            android:background="@drawable/tabhost_mainac_backgroud"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/first_page_fragment_tx_user_name"
            android:text="用户名"
            android:layout_toRightOf="@id/first_page_fragment_iv_user_photo"
            android:layout_marginLeft="18dp"
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/first_page_fragment_cv_user_all"
        android:orientation="horizontal"
        android:baselineAligned="true"
        android:layout_marginTop="65dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                style="@style/fragment_first_page_cv_item_left"
                android:background="@android:color/white"
                app:cardElevation="1dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <ImageView
                        style="@style/fragment_first_page_iv_item"
                        android:src="@mipmap/first_page_item_taolun"
                        />
                    <TextView
                        style="@style/fragment_first_page_tx_item"
                        android:text="课后讨论"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/fragment_first_page_cv_item_left"
                android:background="@android:color/white"
                app:cardElevation="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                <ImageView
                    style="@style/fragment_first_page_iv_item"
                    android:src="@mipmap/first_page_item_kebiao"
                    />

                <TextView
                    style="@style/fragment_first_page_tx_item"
                    android:text="查看课表"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/fragment_first_page_cv_item_left"
                android:background="@android:color/white"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                <ImageView
                    style="@style/fragment_first_page_iv_item"
                    android:src="@mipmap/first_page__item_pingjia"
                    />

                <TextView
                    style="@style/fragment_first_page_tx_item"
                    android:text="课堂评价"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                style="@style/fragment_first_page_cv_item_right"
                android:background="@android:color/white"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                <ImageView
                    style="@style/fragment_first_page_iv_item"
                    android:src="@mipmap/first_page_item_qingjia"
                    />

                <TextView
                    style="@style/fragment_first_page_tx_item"
                    android:text="学生请假"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/fragment_first_page_cv_item_right"
                android:background="@android:color/white"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                <ImageView
                    style="@style/fragment_first_page_iv_item"
                    android:src="@mipmap/first_page_item_chayue"
                    />

                <TextView
                    style="@style/fragment_first_page_tx_item"
                    android:text="查阅资料"
                   />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/fragment_first_page_cv_item_right"
                android:background="@android:color/white"
                app:cardElevation="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                <ImageView
                    style="@style/fragment_first_page_iv_item"
                    android:src="@mipmap/first_page_item_zhitiao"
                    />

                <TextView
                    style="@style/fragment_first_page_tx_item"
                    android:text="乱丢纸条"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>